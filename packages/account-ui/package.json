{
  "name": "@base/account-ui",
  "version": "1.0.0",
  "description": "Base Account UI Components",
  "keywords": [
    "base",
    "account",
    "ui",
    "components",
    "react",
    "preact",
    "web3"
  ],
  "type": "module",
  "exports": {
    "./preact": {
      "types": "./dist/frameworks/preact/index.d.ts",
      "default": "./dist/frameworks/preact/index.js"
    },
    "./react": {
      "types": "./dist/frameworks/react/index.d.ts",
      "default": "./dist/frameworks/react/index.js"
    }
  },
  "sideEffects": false,
  "repository": "https://github.com/base/account-sdk.git",
  "author": "Base",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "build": "rm -rf ./dist && tsc -p ./tsconfig.build.json && tsc-alias",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ."
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@vitest/coverage-v8": "2.1.2",
    "preact": "^10.26.9",
    "tsc-alias": "^1.8.8",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "preact": "*",
    "react": "*"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
