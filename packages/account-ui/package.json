{
  "name": "@base/account-ui",
  "version": "1.0.0",
  "description": "Base Account UI Components",
  "keywords": [
    "base",
    "account",
    "ui",
    "components",
    "react",
    "preact",
    "web3"
  ],
  "type": "module",
  "exports": {
    "./preact": {
      "types": "./dist/index.preact.d.ts",
      "default": "./dist/index.preact.js"
    },
    "./react": {
      "types": "./dist/index.react.d.ts",
      "default": "./dist/index.react.js"
    }
  },
  "sideEffects": false,
  "repository": "https://github.com/base/account-sdk.git",
  "author": "Base",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "build": "yarn workspace @base/account-ui-preact build && yarn workspace @base/account-ui-react build && rm -rf ./dist && rollup -c",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ."
  },
  "devDependencies": {
        "@base/account-ui-preact": "workspace:*",
    "@base/account-ui-react": "workspace:*",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@vitest/coverage-v8": "2.1.2",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "tsc-alias": "^1.8.8",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "preact": "*",
    "react": "*"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
